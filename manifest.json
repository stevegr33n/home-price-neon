{
    "name": "Rightmove Enhancement Suite",
    "version": "1.0",
    "manifest_version": 3,
    "description": "See property price history on Rightmove",
    "action": {
        "default_title": "Rightmove Enhancement Suite",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
        "js": ["contentScript.js"],
        "matches": ["https://*.rightmove.co.uk/*"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icons/logo-16.png",
        "48": "images/icons/logo-48.png",
        "128": "images/icons/logo-128.png"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://www.rightmove.co.uk/*"
            ],
            "resources": [
                "*.gif",
                "*.svg"
            ]
        }
    ],
    "permissions": [
        "storage", "tabs"
    ]
}
