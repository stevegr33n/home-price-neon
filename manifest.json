{
    "name": "Rightmove Enhancement Suite",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Allows you to see a property's price history on Rightmove. More Rightmove insights coming soon.",
    "content_scripts": [{
        "matches": [
            "https://www.rightmove.co.uk/*"
        ],
        "css": [
            "rightmove-enhancement-suite.css"
        ],
        "js": [
            "content-script.js"
        ]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icons/icon16.png",
        "48": "images/icons/icon48.png",
        "128": "images/icons/icon128.png"
    },
    "permissions": ["storage", "tabs"],
    "host_permissions":["https://rub-a-dub-dub.club/zoekravitz", "https://rub-a-dub-dub.club/lennykravitz"]

}
