{
    "name": "Rightmove Enhancement Suite",
    "version": "1.0",
    "manifest_version": 3,
    "description": "See property price history on Rightmove",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content-script.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icons/logo-16.png",
        "48": "images/icons/logo-48.png",
        "128": "images/icons/logo-128.png"
    },
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "host_permissions":["http://localhost:4000/properties/*"]

}
